options {
    directory "/var/cache/bind";
    allow-query { 0.0.0.0/0; };

    allow-recursion { none; };
    recursion no;

    // Configure the IPs to listen on here.
    listen-on { any; };
    listen-on-v6 { none; };

    pid-file "/var/run/named/named.pid";
    allow-transfer { none; };

    // Activer DNSSEC
    dnssec-enable yes;
    dnssec-validation yes;

    // Configurer les adresses IP des serveurs DNS racines
    // Remplacez les adresses IP ci-dessous par les adresses des serveurs racines de confiance
    managed-keys {
        "." initial-key 257 3 8 "";
        "." initial-key 257 3 8 "AwEAAagAIKlVZrpC6Ia7gEzahOR+9W29euxhJhVVLOyQbSEW0O8gcCjF FVQUTf6v58fLjwBd0YI0EzrAcQqBGCzh/RStIoO8g0NfnfL2MTJRkxoX bfDaUeVPQuYEhg37NZWAJQ9VnMVDxP/VHL496M/QZxkjf5/Efucp2gaD X6RS6CXpoY68LsvPVjR0ZSwzz1apAzvN9dlzEheX7ICJBBtuA6G3LQpz W5hOA2hzCTMjJPJ8LbqF6dsV6DoBQzgul0sGIcGOYl7OyQdXfZ57relS Qageu+ipAdTTJ25AsRTAoub8ONGcLmqrAmRLKBP1dfwhYB4N7knNnulq QxA+Uk1ihz0=";
    };

    // Configurer les restrictions de transfert de zone
    allow-query { any; };
    allow-transfer { none; };

    // Configurer l'utilisation de serveurs racines de confiance
    dnssec-lookaside auto;

    // Activer EDNS pour les requêtes DNS plus grandes que 512 octets
    edns-udp-size 4096;

    // Limiter les requêtes récursives
    recursion yes;
    allow-recursion { trusted; };

    // Configurer les serveurs DNS forwarders
    forwarders {
        8.8.8.8;    // Google Public DNS
        1.1.1.1;    // Cloudflare DNS
    };

    // Configurer les restrictions de transfert de zone
    allow-transfer { none; };
    allow-query-cache { trusted; };
    allow-query { any; };

    // Configurer les journaux de BIND
    logging {
        channel default_log {
            file "/var/log/named/named.log" versions 3 size 5m;
            severity dynamic;
            print-time yes;
        };
        category default { default_log; };
        category queries { default_log; };
    };
};
